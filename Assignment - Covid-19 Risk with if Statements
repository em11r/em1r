age = input("Are you a cigarette addict older than 75 years old? (yes or no): ").lower().strip()
chronic = input("Do you have a severe chronic disease? (yes or no): ").lower().strip()
immune = input("Is your immune system too weak? (yes or no): ").lower().strip()

if age == "yes" or chronic == "yes" or immune == "yes":
  print("You are under risk.")
else:
  print("You are not under risk.")
